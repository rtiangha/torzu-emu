<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Torzu.Splash.Main" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/torzu_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_torzu</item>
        <item name="postSplashScreenTheme">@style/Theme.Torzu.Main</item>
    </style>

    <style name="Theme.Torzu.Main" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/torzu_primary</item>
        <item name="colorOnPrimary">@color/torzu_onPrimary</item>
        <item name="colorPrimaryContainer">@color/torzu_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/torzu_onPrimaryContainer</item>
        <item name="colorSecondary">@color/torzu_secondary</item>
        <item name="colorOnSecondary">@color/torzu_onSecondary</item>
        <item name="colorSecondaryContainer">@color/torzu_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/torzu_onSecondaryContainer</item>
        <item name="colorTertiary">@color/torzu_tertiary</item>
        <item name="colorOnTertiary">@color/torzu_onTertiary</item>
        <item name="colorTertiaryContainer">@color/torzu_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/torzu_onTertiaryContainer</item>
        <item name="colorError">@color/torzu_error</item>
        <item name="colorErrorContainer">@color/torzu_errorContainer</item>
        <item name="colorOnError">@color/torzu_onError</item>
        <item name="colorOnErrorContainer">@color/torzu_onErrorContainer</item>
        <item name="android:colorBackground">@color/torzu_background</item>
        <item name="colorOnBackground">@color/torzu_onBackground</item>
        <item name="colorSurface">@color/torzu_surface</item>
        <item name="colorOnSurface">@color/torzu_onSurface</item>
        <item name="colorSurfaceVariant">@color/torzu_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/torzu_onSurfaceVariant</item>
        <item name="colorOutline">@color/torzu_outline</item>
        <item name="colorOnSurfaceInverse">@color/torzu_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/torzu_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/torzu_inversePrimary</item>
        <item name="android:shadowColor">@color/torzu_shadow</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="sliderStyle">@style/TorzuSlider</item>
        <item name="materialAlertDialogTheme">@style/TorzuMaterialDialog</item>

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

</resources>
